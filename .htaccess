RewriteRule ^milkshakes/?$ /#shakes [R=301,L]
RewriteRule ^frappes/?$ /#frappes [R=301,L]
RewriteRule ^affogatos/?$ /#affogatos [R=301,L]
RewriteRule ^coldbrew/?$ /#coldbrew [R=301,L]
RewriteRule ^manual/?$ /#manual [R=301,L]
RewriteRule ^aquablend/?$ /#aquablend [R=301,L]
RewriteRule ^coldcoffee/?$ /#coldcoffee [R=301,L]
RewriteRule ^hotcoffee/?$ /#hotcoffee [R=301,L]
RewriteRule ^hotchocolate/?$ /#hotchocolate [R=301,L]
